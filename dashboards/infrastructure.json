{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "Infrastructure metrics: CPU, memory, disk, network per host",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "title": "CPU Utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "system_cpu_utilization{host_name=~\"$host\", host_type=~\"$platform\"}",
          "legendFormat": "{{ host_name }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 1,
            "fillOpacity": 10
          },
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        }
      }
    },
    {
      "title": "Memory Utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "system_memory_utilization{host_name=~\"$host\", host_type=~\"$platform\"}",
          "legendFormat": "{{ host_name }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 1,
            "fillOpacity": 10
          },
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        }
      }
    },
    {
      "title": "Disk I/O (Read + Write)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "rate(system_disk_io_bytes_total{host_name=~\"$host\", host_type=~\"$platform\", direction=\"read\"}[5m])",
          "legendFormat": "{{ host_name }} read"
        },
        {
          "expr": "rate(system_disk_io_bytes_total{host_name=~\"$host\", host_type=~\"$platform\", direction=\"write\"}[5m])",
          "legendFormat": "{{ host_name }} write"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 1,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Network Throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "rate(system_network_io_bytes_total{host_name=~\"$host\", host_type=~\"$platform\", direction=\"transmit\"}[5m])",
          "legendFormat": "{{ host_name }} TX"
        },
        {
          "expr": "rate(system_network_io_bytes_total{host_name=~\"$host\", host_type=~\"$platform\", direction=\"receive\"}[5m])",
          "legendFormat": "{{ host_name }} RX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 1,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Filesystem Usage",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "system_filesystem_utilization{host_name=~\"$host\", host_type=~\"$platform\", mountpoint!~\"/proc.*|/sys.*|/dev.*\"}",
          "legendFormat": "{{ host_name }} {{ mountpoint }}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "title": "System Load (Linux only)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "system_cpu_load_average_1m{host_name=~\"$host\", host_type=~\"$platform\"}",
          "legendFormat": "{{ host_name }} 1m"
        },
        {
          "expr": "system_cpu_load_average_5m{host_name=~\"$host\", host_type=~\"$platform\"}",
          "legendFormat": "{{ host_name }} 5m"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 1,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Host Logs",
      "type": "logs",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{host_name=~\"$host\", host_type=~\"$platform\"} | logfmt",
          "maxLines": 100
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["observability", "infrastructure"],
  "templating": {
    "list": [
      {
        "name": "platform",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "mimir" },
        "query": "label_values(system_cpu_utilization, host_type)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true
      },
      {
        "name": "host",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "mimir" },
        "query": "label_values(system_cpu_utilization{host_type=~\"$platform\"}, host_name)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Infrastructure",
  "uid": "obs-infrastructure"
}
