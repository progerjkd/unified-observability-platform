{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "RED metrics (Rate, Error, Duration) per service â€” generated from traces by Tempo metrics generator",
  "editable": true,
  "graphTooltip": 2,
  "panels": [
    {
      "title": "Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "sum(rate(traces_spanmetrics_calls_total{service_name=~\"$service\", deployment_environment=~\"$environment\"}[5m])) by (service_name)",
          "legendFormat": "{{ service_name }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "sum(rate(traces_spanmetrics_calls_total{service_name=~\"$service\", status_code=\"STATUS_CODE_ERROR\", deployment_environment=~\"$environment\"}[5m])) by (service_name) / sum(rate(traces_spanmetrics_calls_total{service_name=~\"$service\", deployment_environment=~\"$environment\"}[5m])) by (service_name)",
          "legendFormat": "{{ service_name }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      }
    },
    {
      "title": "Duration (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "mimir" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(traces_spanmetrics_latency_bucket{service_name=~\"$service\", deployment_environment=~\"$environment\"}[5m])) by (le, service_name))",
          "legendFormat": "{{ service_name }} p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(traces_spanmetrics_latency_bucket{service_name=~\"$service\", deployment_environment=~\"$environment\"}[5m])) by (le, service_name))",
          "legendFormat": "{{ service_name }} p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(traces_spanmetrics_latency_bucket{service_name=~\"$service\", deployment_environment=~\"$environment\"}[5m])) by (le, service_name))",
          "legendFormat": "{{ service_name }} p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 5
          }
        }
      }
    },
    {
      "title": "Service Topology Map",
      "type": "nodeGraph",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "serviceMap",
          "serviceMapQuery": "{deployment.environment=~\"$environment\"}"
        }
      ]
    },
    {
      "title": "Recent Error Traces",
      "type": "table",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 18 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "traceqlSearch",
          "query": "{status = error && resource.service.name =~ \"$service\"}",
          "limit": 20
        }
      ]
    },
    {
      "title": "Error Logs (last 1h)",
      "type": "logs",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 26 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service_name=~\"$service\", deployment_environment=~\"$environment\"} |= \"error\" or |= \"ERROR\" or |= \"Exception\"",
          "maxLines": 100
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["observability", "service", "RED"],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "mimir" },
        "query": "label_values(traces_spanmetrics_calls_total, service_name)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true
      },
      {
        "name": "environment",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "mimir" },
        "query": "label_values(traces_spanmetrics_calls_total, deployment_environment)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Service Health (RED Metrics)",
  "uid": "obs-service-health"
}
